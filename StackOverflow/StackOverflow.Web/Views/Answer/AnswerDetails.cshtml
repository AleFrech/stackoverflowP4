@using System.Web.UI.WebControls
@model StackOverflow.Web.Models.AnswerDetailModel

<div>

    <hr/>
    @using (Html.BeginForm("UpVote", "Answer", new { ID = Model.AnswerID }))
    {
        <button type="submit">Up Vote</button>
    }
    <div>
        @using (Html.BeginForm("DownVote", "Answer", new {ID = Model.AnswerID}))
        {
            <button type="submit">Down Vote</button>
        }
    </div>
    <div>
        @using (Html.BeginForm("MarkAnswer", "Answer", new { ID = Model.AnswerID,qId=Model.QuestionID }))
        {
            <button type="submit">Mark Answer</button>
        }
    </div>
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Votes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Votes)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to Answers", "AnswerIndex","Answer",new{ID=Model.AnswerID,qID=Model.QuestionID},null) |@if (Model.)
                                                                                                                  {
                                                                                                                      @Html.ActionLink("Delete ", "DelteAnswer", "Answer", new { ID = Model.AnswerID, qID = Model.QuestionID }, null)
                                                                                                                  }
</p>
